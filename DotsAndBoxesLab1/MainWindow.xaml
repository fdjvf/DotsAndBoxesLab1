        <RadioButton x:Name="CpuPlayerRdb" Content="CPU VS Jugador" HorizontalAlignment="Left" Margin="131,79,0,0" VerticalAlignment="Top" Height="23" Width="121" RenderTransformOrigin="0.504,-0.009"/>
        <RadioButton x:Name="CpuRdb" Content="CPU VS CPU" HorizontalAlignment="Left" Margin="21,79,0,0" Width="121" Height="19" VerticalAlignment="Top"/>

    </Grid>
</Window>
